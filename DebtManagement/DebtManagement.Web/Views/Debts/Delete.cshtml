@model DebtManagement.Web.DTOs.DebtDto

@{
    ViewData["Title"] = "Delete Debt";
}

<h1>Delete Debt</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Debt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Debt Type
        </dt>
        <dd class = "col-sm-10">
            @Model.DebtType
        </dd>
        <dt class = "col-sm-2">
            Debt Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.DebtAmount
        </dd>
        <dt class = "col-sm-2">
            Client Name
        </dt>
        <dd class = "col-sm-10">
            @Model.ClientName
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
