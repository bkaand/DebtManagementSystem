@model IEnumerable<DebtManagement.Web.DTOs.DebtDto>

@{
    ViewData["Title"] = "Debts";
}

<h1>Debts</h1>

<table class="table">
    <thead>
        <tr>
            <th>Debt Type</th>
            <th>Debt Amount</th>
            <th>Client Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var debt in Model)
        {
            <tr>
                <td>@debt.DebtType</td>
                <td>@debt.DebtAmount</td>
                <td>@debt.ClientName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@debt.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@debt.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@debt.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New</a>
