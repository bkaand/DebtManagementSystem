@model DebtManagement.Web.DTOs.DebtDto

@{
    ViewData["Title"] = "Debt Details";
}

<h1>Debt Details</h1>

<div>
    <h4>Debt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Debt Type
        </dt>
        <dd class = "col-sm-10">
            @Model.DebtType
        </dd>
        <dt class = "col-sm-2">
            Debt Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.DebtAmount
        </dd>
        <dt class = "col-sm-2">
            Installments
        </dt>
        <dd class = "col-sm-10">
            @Model.Installments
        </dd>
        <dt class = "col-sm-2">
            Remaining Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.RemainingAmount
        </dd>
        <dt class = "col-sm-2">
            Early Closing Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.EarlyClosingAmount
        </dd>
        <dt class = "col-sm-2">
            Interest Rate Monthly
        </dt>
        <dd class = "col-sm-10">
            @Model.InterestRateMonthly
        </dd>
        <dt class = "col-sm-2">
            Interest Rate Yearly
        </dt>
        <dd class = "col-sm-10">
            @Model.InterestRateYearly
        </dd>
        <dt class = "col-sm-2">
            Insurance Amount
        </dt>
        <dd class = "col-sm-10">
            @Model.InsuranceAmount
        </dd>
        <dt class = "col-sm-2">
            Created Date
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate
        </dd>
        <dt class = "col-sm-2">
            Client Name
        </dt>
        <dd class = "col-sm-10">
            @Model.ClientName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
